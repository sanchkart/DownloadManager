<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskProgress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:progress="0"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/cancelSecondButton"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/taskProgress">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Wait..."
            android:id="@+id/textViewMobi"
            android:layout_row="0"
            android:layout_column="0"
            android:editable="false"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Wait..."
            android:id="@+id/textViewIndigo"
            android:layout_row="0"
            android:layout_column="1"
            android:editable="false"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Wait..."
            android:id="@+id/textViewMinistro"
            android:layout_row="0"
            android:layout_column="2"
            android:editable="false"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textViewNewMobi"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textViewNewIndigo"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textViewNewMinistro"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILOCK"
            android:id="@+id/buttonDownload"
            android:enabled="false"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ministroButton"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDIGOTAXI"
            android:id="@+id/secondAppButton"
            android:enabled="false"
            android:layout_alignTop="@+id/ministroButton"
            android:layout_alignEnd="@+id/cancelSecondButton"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ministro"
            android:id="@+id/ministroButton"
            android:enabled="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel "
            android:id="@+id/cancelButton"
            android:enabled="false"
            android:visibility="visible"
            android:layout_below="@+id/buttonDownload"
            android:layout_alignStart="@+id/buttonDownload"
            android:layout_marginTop="46dp"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelSecondButton"
            android:enabled="false"
            android:layout_above="@+id/taskProgress"
            android:layout_alignParentEnd="true"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="46dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelThirdButton"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="46dp"
            android:enabled="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Service"
            android:id="@+id/startServiceButton"
            android:layout_row="4"
            android:layout_column="1"
            android:enabled="false"
            android:textSize="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelServiceButton"
            android:layout_row="5"
            android:layout_column="1"
            android:enabled="false" />
    </GridLayout>

</RelativeLayout>
